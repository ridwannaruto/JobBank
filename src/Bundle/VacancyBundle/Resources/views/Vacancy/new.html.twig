{%  extends "CoreBundle:Base:base.html.twig" %}


{% block content %}
    <div id="content" class="span10">
        <div class="row-fluid">
            <h2><i class="icon-locked"></i> Create New Vacancy</h2>
            <hr>

            {{ form_start(form) }}
                <div class="control-group primary">
                    {{form_label(form.heading, 'Title',{ 'label_attr': {'class': 'control-label'} })}}

                    <div class="controls">
                        {{form_widget(form.heading)}}
                        <span class="help-inline">{{ form_errors(form.heading) }}</span>
                    </div>
                </div>

                <div class="control-group primary">
                    {{form_label(form.applybeforedate, 'Deadline for Applications',{ 'label_attr': {'class': 'control-label'} })}}

                    <div class="controls">
                        {{form_widget(form.applybeforedate, {'value':"now"|date("m/d/Y")})}}
                        <span class="help-inline">{{ form_errors(form.applybeforedate) }}</span>
                    </div>
                </div>
            {{ form_end(form) }}
        </div>
    </div>
{% endblock %}