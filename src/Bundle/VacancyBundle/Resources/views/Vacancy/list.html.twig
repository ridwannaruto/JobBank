{%  extends "CoreBundle:Base:base.html.twig" %}

{% block content %}
    <div id="content" class="span10">
        {% if app.session.get('access_level') == 'Admin'%}
            <div class="row-fluid">
                <div class="pull-right">
                    <a href="{{path('vacancy_new')}}"><button class="btn btn-round btn-success"><i class="icon-plus"></i> New Vacancy </button></a>
                </div>
            </div>
            <br>
        {% endif %}

        <div class="row-fluid">
            <div class="box span12">
                <div class="box-header well" data-original-title>
                    <h2><i class="icon-edit"></i> Current Vacancies</h2>
                    <div class="box-icon">
                        <a href="#" class="btn btn-minimize btn-round"><i class="icon-chevron-up"></i></a>
                    </div>
                </div>
                <div class="box-content">
                    <br>
                    <table class="table table-striped table-bordered bootstrap-datatable datatable">
                        <thead>
                        <tr>
                            <th width="15%">ID</th>
                            <th width="15%">Title</th>
                            <th width="40%">Description</th>
                            <th width="15%">Available Position</th>
                            <th width="15%">No of Vacancies</th>
                        </tr>
                        </thead>

                        <tbody>
                        {% for vacancy in currentVacancyList %}
                            <tr>
                                <td><a href="{{ path('vacancy_detail', {'vacancyId':vacancy.id}) }}" >{{ vacancy.id }} </a></td>
                                <td class="center">{{ vacancy.heading }}</td>
                                <td class="center">{{ vacancy.description }}</td>
                                <td class="center">{{ vacancy.availableposition }}</td>
                                <td class="center">{{ vacancy.noofvacancies }}</td>
                            </tr>
                        {% endfor %}
                        </tbody>
                    </table>
                </div>
            </div>
        </div>

        <div class="row-fluid">
            <div class="box span12">
                <div class="box-header well" data-original-title>
                    <h2><i class="icon-edit"></i> Old Vacancies</h2>
                    <div class="box-icon">
                        <a href="#" class="btn btn-minimize btn-round"><i class="icon-chevron-up"></i></a>
                    </div>
                </div>
                <div class="box-content">
                    <br>
                    <table class="table table-striped table-bordered bootstrap-datatable datatable">
                        <thead>
                            <tr>
                                <th width="15%">ID</th>
                                <th width="15%">Title</th>
                                <th width="40%">Description</th>
                                <th width="15%">Available Position</th>
                                <th width="15%">No of Vacancies</th>
                            </tr>
                        </thead>

                        <tbody>
                            {% for vacancy in oldVacancyList %}
                                <tr>
                                    <td><a href="{{ path('vacancy_detail', {'vacancyId':vacancy.id}) }}" >{{ vacancy.id }} </a></td>
                                    <td class="center">{{ vacancy.heading }}</td>
                                    <td class="center">{{ vacancy.description }}</td>
                                    <td class="center">{{ vacancy.availableposition }}</td>
                                    <td class="center">{{ vacancy.noofvacancies }}</td>
                                </tr>
                            {% endfor %}
                        </tbody>
                    </table>
                </div>
            </div>
        </div>
    </div>
{% endblock %}